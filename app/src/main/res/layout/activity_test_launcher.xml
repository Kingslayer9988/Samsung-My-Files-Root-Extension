<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modern Storage Manager Test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_test_add_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Add Root Location"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_test_add_smb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Add SMB Share"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_test_browse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Browse Storage"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_test_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Document Provider"
        android:layout_marginBottom="16dp" />

</LinearLayout>
